<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e7e7e7" >

  <LinearLayout
        android:id="@+id/ll_above_ex_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:visibility="gone" >

        <View
            android:id="@+id/view1"
            android:layout_width="1.5dp"
            android:layout_height="36dp"
             android:layout_marginLeft="112.5dp"
             android:background="#10000000" />
        	<!--android:layout_marginLeft="78.5dp" -->
            
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="1.5dp"
        android:layout_height="36dp"
        android:layout_marginLeft="112.5dp"
        android:layout_below="@+id/ll_above_ex_list"
        android:background="#10000000" />

    <TextView
        android:id="@+id/tv_header_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/view2"
        android:layout_below="@+id/ll_above_ex_list"
        android:text="Sample Month"
        android:textColor="#b4b4b5"
        android:textSize="20sp" />

</RelativeLayout>