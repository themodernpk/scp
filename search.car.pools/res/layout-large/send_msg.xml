<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.search.car.pools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/l_search_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_border" >

        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_tops"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal" >

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="15dp"
                android:background="#0087ca" />

            <TextView
                android:id="@+id/tv_1_send_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:layout_toLeftOf="@+id/l_"
                android:text="Send"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_2_send_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/l_"
                android:text="Email"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/l_"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/green_circle"
                android:gravity="center_horizontal|center_vertical" >

                <ImageView
                    android:id="@+id/iv_send_msg"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l1_your_name"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/l1"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_back"
            android:gravity="center" >

            <com.example.search.car.pools.FloatLabelLayout
                android:id="@+id/fl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                app:floatLabelTextAppearance="@style/TextAppearance.FLL.FloatLabel.Grey" 
                android:layout_toLeftOf="@+id/iv_1">

                <EditText
                    android:id="@+id/et_your_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#00000000"
                    android:hint="Your Name"
                    android:inputType="textPersonName|textCapWords"
                    android:paddingLeft="1dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textColor="#bcbcbc"
                    android:textColorHint="#bcbcbc" />
            </com.example.search.car.pools.FloatLabelLayout>

            <ImageView
                android:id="@+id/iv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/name_dialog" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l1_your_email"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/l1_your_name"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittext_back" >

            <com.example.search.car.pools.FloatLabelLayout
                android:id="@+id/fl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                app:floatLabelTextAppearance="@style/TextAppearance.FLL.FloatLabel.Grey" 
                android:layout_toLeftOf="@+id/iv_2">

                <EditText
                    android:id="@+id/et_your_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:paddingLeft="1dp"
                    android:textColor="#bcbcbc"
                    android:textColorHint="#bcbcbc" />
            </com.example.search.car.pools.FloatLabelLayout>

            <ImageView
                android:id="@+id/iv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/email_dialog" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l1_your_phone"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/l1_your_email"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittext_back" >

            <com.example.search.car.pools.FloatLabelLayout
                android:id="@+id/fl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                app:floatLabelTextAppearance="@style/TextAppearance.FLL.FloatLabel.Grey"
                android:layout_toLeftOf="@+id/iv_3" >

                <EditText
                    android:id="@+id/et_your_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:paddingLeft="1dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textColor="#bcbcbc"
                    android:background="#00000000"
                    android:textColorHint="#bcbcbc" />
            </com.example.search.car.pools.FloatLabelLayout>

            <ImageView
                android:id="@+id/iv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/phone_send_msg" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/l1_our_msg"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/l1_your_phone"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittext_back"
            android:orientation="vertical" >

            <com.example.search.car.pools.FloatLabelLayout
                android:id="@+id/fl1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                app:floatLabelTextAppearance="@style/TextAppearance.FLL.FloatLabel.Grey"
                android:layout_toLeftOf="@+id/iv_4" >

                <EditText
                    android:id="@+id/et_your_sms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:hint="Your Message"
                    android:background="#00000000"
                    android:inputType="textMultiLine|textCapSentences"
                    android:paddingLeft="1dp"
                    android:textColor="#bcbcbc"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textColorHint="#bcbcbc" />
            </com.example.search.car.pools.FloatLabelLayout>

            <ImageView
                android:id="@+id/iv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/message" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/l_button_bottom"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/l1_our_msg"
            android:layout_alignRight="@+id/l1_our_msg"
            android:layout_below="@+id/l1_our_msg"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/green_button_large_layouts"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/b_back_msg"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_back_send_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:text="BACK"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_back_send_msg"
                    android:src="@drawable/back_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/viewlight"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#1ad0a3" />

            <RelativeLayout
                android:id="@+id/b_send_msg"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_send_send_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="SEND EMAIL"
                    android:textColor="#FFFFFF" />
            </RelativeLayout>
        </LinearLayout>
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/l_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/l_close1"
        android:layout_marginTop="5dp"
        android:background="@drawable/blue_circle_small"
        android:gravity="center_horizontal|center_vertical" >

        <ImageView
            android:id="@+id/iv_close_bottom"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/close" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/l_close1"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/green_circle"
        android:gravity="center_horizontal|center_vertical"
        android:visibility="invisible" >

    </RelativeLayout>
    
</RelativeLayout>