<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical|center_horizontal" >

    <LinearLayout
        android:id="@+id/l1_left"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="16"
            android:textColor="#03cb99"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_month_below"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="May"
            android:textColor="#03cb99"
            android:textSize="11sp" />
    </LinearLayout>

    <!-- <View -->
    <!-- android:id="@+id/view1" -->
    <!-- android:layout_width="1dp" -->
    <!-- android:layout_height="match_parent" -->
    <!-- android:layout_alignLeft="@+id/iv_user_image" -->
    <!-- android:layout_alignBottom="@+id/view2" -->
    <!-- android:layout_alignParentTop="true" -->
    <!-- android:layout_marginLeft="25dp" -->
    <!-- android:background="#ededed" /> -->

    <View
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/view2"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="75dp"
        android:background="#ededed" />

    <ImageView
        android:id="@+id/iv_user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/l1_left" />

    <ImageView
        android:id="@+id/iv_user_image_gravatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/l1_left"
        android:layerType="software" />

    <!-- <com.pkmmte.circularimageview.CircularImageView -->
