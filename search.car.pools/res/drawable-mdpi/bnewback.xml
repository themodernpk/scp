<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<item>
    <shape android:shape="rectangle">
        <size 
            android:width="120dp"
            android:height="30dp" />
        <solid android:color="#0087ca" />
        <corners android:radius="0dp"/>
    </shape>
</item>

<item
    android:top="-50dp"
    android:bottom="65dp"
    android:right="-30dp">
    <rotate
        android:fromDegrees="45">
        <shape android:shape="rectangle">
            
            <solid android:color="#f5f5f5" />
        </shape>
    </rotate>
</item>

<item
    android:top="65dp"
    android:bottom="-50dp"
    android:right="-30dp">
    <rotate
        android:fromDegrees="-45">
        <shape android:shape="rectangle">
            <solid android:color="#f5f5f5" />
        </shape>
    </rotate>
</item>

</layer-list>