<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:src">@drawable/menu</item>
    </style>

    <style name="PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_bg_color</item>
        <item name="android:divider">@drawable/down_arrow_grey</item>
        <item name="android:dividerHeight">1.5dp</item>
    </style>

    <style name="MyActionBar.MenuTextStyle" parent="android:Widget.Holo.Light">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="AppTheme.ActionBar" parent="android:Widget.ActionBar">
        <item name="android:background">#0087ca</item>
        <item name="android:height">60dp</item>
        <!-- <item name="android:logo">@drawable/actionbar_space_between_icon_and_title</item> -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/tabtextcolor</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:itemTextAppearance">@style/MyActionBar.MenuTextStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_backxxme</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow_h</item>
    </style>

    <style name="tabtextcolor" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@color/tab_color</item>
    </style>

    <style name="ActionBarTabStyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_stylingactionbar</item>
        <item name="android:actionBarTabTextStyle">@style/tabtextcolor</item>
        <item name="android:actionBarDivider">@color/swipe_color</item>
    </style>

    <style name="tabtextcolor" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.FLL.FloatLabel.Blue" parent="android:TextAppearance.Small">
        <item name="android:textColor">#27272f</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.FLL.FloatLabel.Grey" parent="android:TextAppearance.Small">
        <item name="android:textColor">#bcbcbc</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.FLL.FloatLabel.White" parent="android:TextAppearance.Small">
        <item name="android:textColor">#d5ffff</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.FLL.FloatLabel.BlueText" parent="android:TextAppearance.Small">
        <item name="android:textColor">#0087ca</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.FLL.FloatLabel.BlueTextSearch" parent="android:TextAppearance.Small">
        <item name="android:textColor">#0087ca</item>
        <item name="android:textSize">11sp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="TextAppearance.FLL.FloatLabel.BlueText_large" parent="android:TextAppearance.Small">
        <item name="android:textColor">#0087ca</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.FLL.FloatLabel.BlueTextCreateAdd" parent="android:TextAppearance.Small">
        <item name="android:textColor">#0087ca</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:capitalize">characters</item>
    </style>

    <style name="NoActionBar" parent="android:Theme.Holo">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>